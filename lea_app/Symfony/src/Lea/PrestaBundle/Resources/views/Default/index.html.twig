{% extends "::base.html.twig" %}

{% block body %}
<div class="contenu">
	<div class="div_gauche">
	<section>
		<div class="menu">Menu principal</div>
		<ul>
			<li style="margin-top : 10px;" >
				<a id="create_presta" href="./create">
					<img src="{{ asset('bundles/lea/images/divers/plus.png') }}"  />
					Créer une nouvelle prestation
				</a>
			</li>
		</ul>
		
		<ul style="margin-top : 10px;padding-top : 10px;border-top:1px dotted #CCC" >
			<li>
		<form name="recherche" class="presta" >
			<table>
				<tr>
					<td>Conseiller </td><td>: {{ form_widget(formAccount.account_id) }}</td>
				</tr>
				<tr>
					<td>Dispositif </td><td>: {{ form_widget(formPresta.dispositif) }}</td>
				</tr>
				<tr>
					<td>Statut </td><td>: {{ form_widget(formPresta.statut) }}</td>
				</tr>
				<tr>
					<td title="Chercher un libellé ou une lettre de commande" >Libellé </td><td>: {{ form_widget(formPresta.intitule) }}</td>
				</tr>
				<tr>
					<td colspan=2>Recherche par date</td>
				</tr>
				<tr>
					<td>Date </td><td>: {{ form_widget(formPresta.champDate) }}</td>
				</tr>
				<tr>
					<td>entre le </td><td>: {{ form_widget(formPresta.dateDebut) }}</td>
				</tr>
				<tr>
					<td>et le </td><td>: {{ form_widget(formPresta.dateFin) }}</td>
				</tr>
			</table>
			<button id="show_presta" >Chercher</button>
		</form>
			
			</li>
		</ul>
	</section>


	<section>
		{% if(account.accountId.accountId == 10 or account.accountId.accountId == 13 or account.accountId.accountId == 3024)%}
	<div class="menu">Les Options</div>
		<ul>
			<li style="margin-top : 10px;" >
			<a   id="poseoption" href="./poseoption">
			<img    src="{{ asset('bundles/lea/images/divers/plus.png') }}"  /> Poser des options
			</a>
			</li>
		</ul>
		
		<!--<ul  >
			<li>
			<a href="javascript:void(0)">
			<img  src="{{ asset('bundles/lea/images/divers/view.png') }}"  />  Lister les options
			</a>
			</li>
		</ul>-->
	</section>



	<section>
		<div class="menu">Import prestations</div>
		<ul>
			<li style="margin-top : 10px;">
				<a id="import_presta" href="./import">
					<img src="{{ asset('bundles/lea/images/divers/plus.png') }}"  />
					Importer des prestations
				</a>
			</li>
		</ul>
	</section>
	{% endif %}

	<section>
		{% if(account.accountId.accountId == 10 or account.accountId.accountId == 3024)%}
	<div class="menu">Les Activités</div>
		<ul>
			<li style="margin-top : 10px;" >
			<a id="activite_create" href="./activite/create">
			<img src="{{ asset('bundles/lea/images/divers/plus.png') }}"  /> Créer une activité
			</a>
			</li>
		</ul>
		
		<ul>
			<li>
			<a id="activite_show" href="./activite/show">
			<img  src="{{ asset('bundles/lea/images/divers/view.png') }}"  /> Liste des activités
